<h2>Show site</h2>

<ul>

  <li>
    <strong>Fullpath:</strong>
    <%= @site.fullpath %>
  </li>

<%= if assigns[:filenames] do %>
  <li>
    <strong>Jekyll files:</strong>
    <%= @filenames |> inspect %>
  </li>
<% else %>
  <li>
    <strong>Jekyll error:</strong>
    <%= @error %>
  </li>
<% end %>

</ul>

<%= link "Edit", to: site_path(@conn, :edit, @site) %>
<%= link "Back", to: site_path(@conn, :index) %>
